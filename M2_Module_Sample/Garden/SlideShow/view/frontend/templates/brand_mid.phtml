<?php $brandData = $block->getFavouriteBrand(); ?>
<?php if ($brandData->getSize()): ?>
    <div class="brands-pic"><img
            src="<?= $escaper->escapeUrl($this->getViewFileUrl('Garden_SlideShow::images/brands-love.png')); ?>"
            alt="<?= $escaper->escapeHtml(__('Favourite Brands')); ?>"/>
    </div>
    <div class="brands-love">
        <ul>
            <?php foreach ($brandData as $brand) : ?>
                <?php $imageName = $brand->getFldImage(); ?>
