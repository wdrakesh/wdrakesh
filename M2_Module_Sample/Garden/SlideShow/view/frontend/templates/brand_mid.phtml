                        <a href="<?=  $escaper->escapeUrl($brand->getStoreUrlLink() . $brand->getUrlLink()) ?>">
                            <img itemprop="image" src="<?= $escaper->escapeHtml($block->getFullImagePath($imageName)); ?>"
