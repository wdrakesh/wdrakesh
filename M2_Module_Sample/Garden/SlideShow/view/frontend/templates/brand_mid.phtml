        <div class="flwidth2">
            <?php foreach ($bannerData as $banner) : ?>
                <?php $imageName = $banner->getFldImage(); ?>
                <?php if ($block->IsImageExits($imageName)) : ?>
                    <div class="boxgeghomebanner ">
                        <a href="<?= $escaper->escapeUrl($banner->getStoreUrlLink() . $banner->getUrlLink()) ?>">
                            <div class="topban">
                                <div class="boxgeghomebannerimg">
                                    <div class="topsrip"><?= $escaper->escapeHtml($banner->getTitle()) ?> <img alt="arrow"
