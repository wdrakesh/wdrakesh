                    </li>
                <?php endif; ?>
            <?php endforeach; ?>

        </ul>
    </div>
<?php endif; ?>
<!--Brand after featured brand-->
<?php $bannerData = $block->getBannerData(); ?>
<?php if ($bannerData->getSize()): ?>
